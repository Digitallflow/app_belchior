<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_app_belchior"
    tools:context="com.digitalflow.belchior.app_belchior.Activity.Inicial">

    <Button
        android:id="@+id/btnLogar"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botao_conectar"
        android:text="Fazer login"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botao_conectar"
        android:text="Cadastrar"
        android:textColor="#fff" />

    <Button
        android:layout_width="251dp"
        android:layout_height="55dp"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:id="@+id/btnLoginGoogle"
        android:background="@drawable/btngoogle" />
    <Button
        android:id="@+id/btnLogoutGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout Google" />

</LinearLayout>
